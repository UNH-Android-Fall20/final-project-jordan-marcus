<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.jzdevelopers.cstracker">

    <!-- Allows App To Access The Internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Application Manifest Settings -->
    <application
        android:allowBackup         ="true"
        android:fullBackupContent   ="true"
        android:hardwareAccelerated ="true"
        android:icon                ="@mipmap/ic_launcher_round"
        android:label               ="@string/app_name"
        android:roundIcon           ="@mipmap/ic_launcher_round"
        android:supportsRtl         ="true"
        android:theme               ="@style/GreenTheme">

        <!-- Activity EventView -->
        <activity
            android:name=".event.EventView"
            android:screenOrientation="portrait"
        />

        <!-- Activity MainActivity -->
        <activity
            android:name=".common.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action   android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity SecondaryUserAdd -->
        <activity
            android:name=".user.SecondaryUserAdd"
            android:screenOrientation="portrait"
        />

        <!-- Activity UserActivation -->
        <activity
            android:name=".user.authentication.UserActivation"
            android:screenOrientation="portrait">
        </activity>

        <!-- Activity UserPasswordReset -->
        <activity
            android:name=".user.authentication.UserPasswordReset"
            android:screenOrientation="portrait">
        </activity>

        <!-- Activity UserSignIn -->
        <activity
            android:name=".user.authentication.UserSignIn"
            android:screenOrientation="portrait"
        />

        <!-- Activity UserSignUp -->
        <activity
            android:name=".user.authentication.UserSignUp"
            android:screenOrientation="portrait"
        />

    </application>

</manifest>
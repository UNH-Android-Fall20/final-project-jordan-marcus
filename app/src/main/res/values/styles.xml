<?xml version="1.0" encoding="utf-8"?>

<!-- Android Global Style Themes For Application -->
<resources>

    <!-- Green Theme -->
    <style name="GreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar" >

        <!-- Default Android Specific Theme Options -->
        <item name="android:navigationBarColor" >@color/green      </item>
        <item name="android:statusBarColor"     >@color/white      </item>
        <item name="android:textColorHighlight" >@color/greenLight </item>
        <item name="android:radioButtonStyle"   >@color/green      </item>
        <item name="colorAccent"                >@color/green      </item>
        <item name="colorPrimary"               >@color/green      </item>
        <item name="colorPrimaryDark"           >@color/greenDark  </item>

        <!-- Custom Theme Options -->
        <item name="rippleColor" >@color/white </item>

        <!-- Material Dialog Options -->
        <item name="md_color_button_text" >@color/green     </item>
        <item name="md_color_content"     >@color/blackOled </item>
        <item name="md_color_title"       >@color/green     </item>
        <item name="md_corner_radius"     >16dp             </item>

        <!-- Menu Item Options -->
        <item name="popupMenuStyle">@style/PopupStyle</item>

    </style>

    <!--  MenuItem Text Color -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/white</item>
    </style>
    <style name="PopupStyle" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:textColorPrimary">@color/blackOled</item>
    </style>

</resources>
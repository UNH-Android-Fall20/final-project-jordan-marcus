        <item name="colorAccent"                >@color/redDark  </item>
        <item name="colorPrimary"               >@color/red      </item>
        <item name="colorPrimaryDark"           >@color/redDark  </item>

        <!-- Custom Theme Options -->
        <item name="ripplePrimary" >@color/white </item>
        <item name="rippleAccent"  >@color/red   </item>
        <item name="layoutPrimary" >@color/white </item>

        <!-- Material Dialog Options -->
        <item name="md_color_button_text" >@color/red      </item>
        <item name="md_color_content"     >@color/greyDark </item>
        <item name="md_color_title"       >@color/red      </item>
        <item name="md_corner_radius"     >16dp            </item>

        <!-- Menu Item Options -->
        <item name="popupMenuStyle">@style/PopupStyle</item>


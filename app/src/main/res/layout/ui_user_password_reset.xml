<?xml version="1.0" encoding="utf-8"?>

<!-- ConstraintLayout UI For Class UserPasswordReset-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android         ="http://schemas.android.com/apk/res/android"
    xmlns:node            ="http://schemas.android.com/apk/res-auto"
    xmlns:tools           ="http://schemas.android.com/tools"
    android:id            ="@+id/uiUserPasswordReset"
    android:background    ="?attr/layoutPrimary"
    android:padding       ="16dip"
    android:layout_height ="match_parent"
    android:layout_width  ="match_parent"
    tools:context         =".user.controller.authentication.UserSignIn">

    <!-- TextView activityName -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id                        ="@+id/activityName"
        android:gravity                   ="center"
        android:text                      ="@string/user_password_reset"
        android:textColor                 ="?colorPrimary"
        android:textSize                  ="30sp"
        android:textStyle                 ="bold"
        android:layout_height             ="wrap_content"
        android:layout_width              ="match_parent"
        node:layout_constraintTop_toTopOf ="parent"
    />

    <!-- ImageView logo -->
    <androidx.appcompat.widget.AppCompatImageView
        android:id                            ="@+id/logo"
        android:src                           ="@drawable/logo"
        android:layout_marginTop              ="16dip"
        android:layout_height                 ="200dip"
        android:layout_width                  ="match_parent"
        node:layout_constraintTop_toBottomOf  ="@id/activityName"
        node:layout_constraintStart_toStartOf ="parent"
        node:layout_constraintEnd_toEndOf     ="parent"
    />

    <!-- EditText emailBox -->
    <com.google.android.material.textfield.TextInputLayout
        style                                ="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id                           ="@+id/emailBox"
        android:textColorHint                ="@color/greyDark"
        android:layout_marginTop             ="16dip"
        android:layout_height                ="wrap_content"
        android:layout_width                 ="match_parent"
        node:boxStrokeColor                  ="?colorPrimary"
        node:hintTextColor                   ="?colorPrimary"
        node:layout_constraintTop_toBottomOf ="@id/logo">

        <!-- EditText email -->
        <com.google.android.material.textfield.TextInputEditText
            android:id            ="@+id/email"
            android:hint          ="@string/email"
            android:inputType     ="text"
            android:lines         ="1"
            android:textColor     ="@color/greyDark"
            android:layout_height ="wrap_content"
            android:layout_width  ="match_parent"
        />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Button resetPassword -->
    <androidx.appcompat.widget.AppCompatButton
        android:id                            ="@+id/resetPassword"
        android:background                    ="@drawable/oval_button"
        android:fitsSystemWindows             ="true"
        android:foreground                    ="@drawable/ripple"
        android:text                          ="@string/reset_password"
        android:textColor                     ="@color/white"
        android:textSize                      ="16sp"
        android:stateListAnimator             ="@null"
        android:layout_marginTop              ="16dip"
        android:layout_height                 ="wrap_content"
        android:layout_width                  ="wrap_content"
        node:layout_constraintTop_toBottomOf  ="@id/emailBox"
        node:layout_constraintStart_toStartOf ="parent"
        node:layout_constraintEnd_toEndOf     ="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>
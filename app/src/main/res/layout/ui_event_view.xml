<?xml version="1.0" encoding="utf-8"?>

<!-- ConstraintLayout UI For Class EventView -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android         ="http://schemas.android.com/apk/res/android"
    xmlns:node            ="http://schemas.android.com/apk/res-auto"
    xmlns:tools           ="http://schemas.android.com/tools"
    android:id            ="@+id/uiEventView"
    android:padding       ="16dip"
    android:layout_width  ="match_parent"
    android:layout_height ="match_parent"
    tools:context         =".event.EventView">

  <!-- TextView events -->
  <TextView
      android:id                        ="@+id/events"
      android:gravity                   ="center"
      android:text                      ="@string/event_view"
      android:textColor                 ="?colorPrimary"
      android:textSize                  ="30sp"
      android:textStyle                 ="bold"
      android:layout_height             ="wrap_content"
      android:layout_width              ="match_parent"
      node:layout_constraintTop_toTopOf ="parent"
      />

  <!-- TextView eventTextView -->
  <TextView
      android:id                              ="@+id/eventTextView"
      android:layout_width                    ="wrap_content"
      android:layout_height                   ="wrap_content"
      android:text                            ="Add An Event"
      node:layout_constraintTop_toTopOf       ="parent"
      node:layout_constraintBottom_toBottomOf ="parent"
      node:layout_constraintStart_toStartOf   ="parent"
      node:layout_constraintEnd_toEndOf       ="parent"
      />

</androidx.constraintlayout.widget.ConstraintLayout>
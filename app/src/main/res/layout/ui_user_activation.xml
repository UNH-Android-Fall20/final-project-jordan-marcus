<?xml version="1.0" encoding="utf-8"?>

<!-- ConstraintLayout UI For Class UserActivation -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android         ="http://schemas.android.com/apk/res/android"
    xmlns:node            ="http://schemas.android.com/apk/res-auto"
    xmlns:tools           ="http://schemas.android.com/tools"
    android:id            ="@+id/uiUserActivation"
    android:padding       ="16dip"
    android:layout_height ="match_parent"
    android:layout_width  ="match_parent"
    tools:context         =".user.controller.authentication.UserSignIn">

    <!-- TextView appName -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id                        ="@+id/appName"
        android:gravity                   ="center"
        android:text                      ="@string/app_name"
        android:textColor                 ="?colorPrimary"
        android:textSize                  ="30sp"
        android:textStyle                 ="bold"
        android:layout_height             ="wrap_content"
        android:layout_width              ="match_parent"
        node:layout_constraintTop_toTopOf ="parent"
    />

    <!-- ImageView logo -->
    <androidx.appcompat.widget.AppCompatImageView
        android:id                            ="@+id/logo"
        android:src                           ="@drawable/logo"
        android:layout_marginTop              ="16dip"
        android:layout_height                 ="200dip"
        android:layout_width                  ="match_parent"
        node:layout_constraintTop_toBottomOf  ="@id/appName"
        node:layout_constraintStart_toStartOf ="parent"
        node:layout_constraintEnd_toEndOf     ="parent"
    />

    <!-- Button checkActivation -->
    <androidx.appcompat.widget.AppCompatButton
        android:id                            ="@+id/checkActivation"
        android:background                    ="@drawable/oval_button"
        android:fitsSystemWindows             ="true"
        android:foreground                    ="@drawable/ripple"
        android:text                          ="@string/check_activation"
        android:textColor                     ="@color/white"
        android:textSize                      ="16sp"
        android:stateListAnimator             ="@null"
        android:layout_marginTop              ="16dip"
        android:layout_height                 ="wrap_content"
        android:layout_width                  ="wrap_content"
        node:layout_constraintTop_toBottomOf  ="@id/logo"
        node:layout_constraintStart_toStartOf ="parent"
        node:layout_constraintEnd_toEndOf     ="parent"
    />

    <!-- TextView resendEmail -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id                            ="@+id/resendEmail"
        android:clickable                     ="true"
        android:focusable                     ="true"
        android:gravity                       ="center"
        android:text                          ="@string/resend_email_text"
        android:textColor                     ="?colorPrimary"
        android:textSize                      ="14sp"
        android:textStyle                     ="bold"
        android:layout_marginTop              ="16dip"
        android:layout_height                 ="wrap_content"
        android:layout_width                  ="match_parent"
        node:layout_constraintTop_toBottomOf  ="@id/checkActivation"
        node:layout_constraintStart_toStartOf ="parent"
        node:layout_constraintEnd_toEndOf     ="parent"
    />

    <!-- ContentLoadingProgressBar progressBar -->
    <androidx.core.widget.ContentLoadingProgressBar
        style                                   ="?android:attr/progressBarStyleLarge"
        android:id                              ="@+id/progressBar"
        android:indeterminate                   ="true"
        android:indeterminateTint               ="?colorPrimary"
        android:visibility                      ="gone"
        android:layout_height                   ="wrap_content"
        android:layout_width                    ="wrap_content"
        node:layout_constraintTop_toTopOf       ="parent"
        node:layout_constraintBottom_toBottomOf ="parent"
        node:layout_constraintStart_toStartOf   ="parent"
        node:layout_constraintEnd_toEndOf       ="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>
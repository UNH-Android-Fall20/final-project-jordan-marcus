<?xml version="1.0" encoding="utf-8"?>

<!-- ConstraintLayout UI For Class UserSignIn -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android         ="http://schemas.android.com/apk/res/android"
    xmlns:node            ="http://schemas.android.com/apk/res-auto"
    xmlns:tools           ="http://schemas.android.com/tools"
    android:id            ="@+id/uiUserSignIn"
    android:padding       ="16dip"
    android:layout_height ="match_parent"
    android:layout_width  ="match_parent"
    tools:context         =".user.controller.authentication.UserSignIn">

    <!-- TextView appName -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id                        ="@+id/appName"
        android:gravity                   ="center"
        android:text                      ="@string/app_name"
        android:textColor                 ="?colorPrimary"
        android:textSize                  ="30sp"
        android:textStyle                 ="bold"
        android:layout_height             ="wrap_content"
        android:layout_width              ="match_parent"
        node:layout_constraintTop_toTopOf ="parent"
    />

    <!-- ImageView logo -->
    <androidx.appcompat.widget.AppCompatImageView
        android:id                            ="@+id/logo"
        android:src                           ="@drawable/logo"
        android:layout_marginTop              ="16dip"
        android:layout_height                 ="200dip"
        android:layout_width                  ="match_parent"
        node:layout_constraintTop_toBottomOf  ="@id/appName"
        node:layout_constraintStart_toStartOf ="parent"
        node:layout_constraintEnd_toEndOf     ="parent"
    />

    <!-- EditText emailBox -->
    <com.google.android.material.textfield.TextInputLayout
        style                                ="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id                           ="@+id/emailBox"
        android:layout_marginTop             ="16dip"
        android:layout_height                ="wrap_content"
        android:layout_width                 ="match_parent"
        node:boxStrokeColor                  ="?colorPrimary"
        node:hintTextColor                   ="?colorPrimary"
        node:layout_constraintTop_toBottomOf ="@id/logo">

        <!-- EditText email -->
        <com.google.android.material.textfield.TextInputEditText
            android:id            ="@+id/email"
            android:hint          ="@string/email"
            android:inputType     ="text"
            android:lines         ="1"
            android:layout_height ="wrap_content"
            android:layout_width  ="match_parent"
        />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- EditText passwordBox -->
    <com.google.android.material.textfield.TextInputLayout
        style                                ="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id                           ="@+id/passwordBox"
        android:layout_marginTop             ="16dip"
        android:layout_height                ="wrap_content"
        android:layout_width                 ="match_parent"
        node:boxStrokeColor                  ="?colorPrimary"
        node:hintTextColor                   ="?colorPrimary"
        node:layout_constraintTop_toBottomOf ="@id/emailBox">

        <!-- EditText password -->
        <com.google.android.material.textfield.TextInputEditText
            android:id            ="@+id/password"
            android:hint          ="@string/password"
            android:inputType     ="textPassword"
            android:lines         ="1"
            android:layout_height ="wrap_content"
            android:layout_width  ="match_parent"
        />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Button signIn -->
    <androidx.appcompat.widget.AppCompatButton
        android:id                            ="@+id/signIn"
        android:background                    ="@drawable/oval_button"
        android:fitsSystemWindows             ="true"
        android:foreground                    ="@drawable/ripple"
        android:text                          ="@string/signin"
        android:textColor                     ="@color/white"
        android:textSize                      ="16sp"
        android:stateListAnimator             ="@null"
        android:layout_marginTop              ="16dip"
        android:layout_height                 ="wrap_content"
        android:layout_width                  ="wrap_content"
        node:layout_constraintTop_toBottomOf  ="@id/passwordBox"
        node:layout_constraintStart_toStartOf ="parent"
        node:layout_constraintEnd_toEndOf     ="parent"
    />

    <!-- TextView forgotPassword -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id                            ="@+id/forgotPassword"
        android:clickable                     ="true"
        android:focusable                     ="true"
        android:gravity                       ="center"
        android:text                          ="@string/forgot_password_text"
        android:textColor                     ="?colorPrimary"
        android:textSize                      ="14sp"
        android:textStyle                     ="bold"
        android:layout_marginTop              ="16dip"
        android:layout_height                 ="wrap_content"
        android:layout_width                  ="match_parent"
        node:layout_constraintTop_toBottomOf  ="@id/signIn"
        node:layout_constraintStart_toStartOf ="parent"
        node:layout_constraintEnd_toEndOf     ="parent"
        />

    <!-- TextView signupText -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id                              ="@+id/signupText"
        android:clickable                       ="true"
        android:focusable                       ="true"
        android:gravity                         ="center"
        android:text                            ="@string/signup_text"
        android:textColor                       ="?colorPrimary"
        android:textSize                        ="14sp"
        android:textStyle                       ="bold"
        android:layout_height                   ="wrap_content"
        android:layout_width                    ="match_parent"
        node:layout_constraintBottom_toBottomOf ="parent"
        node:layout_constraintStart_toStartOf   ="parent"
        node:layout_constraintEnd_toEndOf       ="parent"
    />

    <!-- ContentLoadingProgressBar progressBar -->
    <androidx.core.widget.ContentLoadingProgressBar
        style                                   ="?android:attr/progressBarStyleLarge"
        android:id                              ="@+id/progressBar"
        android:indeterminate                   ="true"
        android:indeterminateTint               ="?colorPrimary"
        android:visibility                      ="gone"
        android:layout_height                   ="wrap_content"
        android:layout_width                    ="wrap_content"
        node:layout_constraintTop_toTopOf       ="parent"
        node:layout_constraintBottom_toBottomOf ="parent"
        node:layout_constraintStart_toStartOf   ="parent"
        node:layout_constraintEnd_toEndOf       ="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
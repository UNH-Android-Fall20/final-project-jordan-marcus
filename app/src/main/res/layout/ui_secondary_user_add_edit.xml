<?xml version="1.0" encoding="utf-8"?>

<!-- CoordinatorLayout UI For Class SecondaryUserAdd -->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android         ="http://schemas.android.com/apk/res/android"
    xmlns:node            ="http://schemas.android.com/apk/res-auto"
    xmlns:tools           ="http://schemas.android.com/tools"
    android:layout_height ="match_parent"
    android:layout_width  ="match_parent" >

  <!-- ConstraintLayout UI For Class SecondaryUserAdd -->
  <androidx.constraintlayout.widget.ConstraintLayout
      android:id            ="@+id/uiSecondaryUserAdd"
      android:padding       ="16dip"
      android:layout_height ="match_parent"
      android:layout_width  ="match_parent"
      tools:context         =".user.controller.authentication.UserSignIn">

    <!-- TextView secondaryUserAdd -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id                        ="@+id/secondaryUserAdd"
        android:gravity                   ="center"
        android:text                      ="@string/secondary_user_add"
        android:textColor                 ="?colorPrimary"
        android:textSize                  ="30sp"
        android:textStyle                 ="bold"
        android:layout_height             ="wrap_content"
        android:layout_width              ="match_parent"
        node:layout_constraintTop_toTopOf ="parent"
    />

    <!-- CircleImageView profileImage -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id                            ="@+id/profileImage"
        android:src                           ="@color/transparent"
        android:layout_marginTop              ="32dip"
        android:layout_height                 ="70dip"
        android:layout_width                  ="70dip"
        node:civ_border_color                 ="?colorPrimary"
        node:civ_border_width                 ="2dip"
        node:layout_constraintTop_toBottomOf  ="@id/secondaryUserAdd"
        node:layout_constraintStart_toStartOf ="parent"
    />

    <!-- TextView nameLetter -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id                              ="@+id/nameLetter"
        android:gravity                         ="center"
        android:text                            ="@string/name_letter_text"
        android:textColor                       ="?colorPrimary"
        android:textSize                        ="30sp"
        android:textStyle                       ="bold"
        android:layout_height                   ="wrap_content"
        android:layout_width                    ="wrap_content"
        node:layout_constraintTop_toTopOf       ="@id/profileImage"
        node:layout_constraintBottom_toBottomOf ="@id/profileImage"
        node:layout_constraintStart_toStartOf   ="@id/profileImage"
        node:layout_constraintEnd_toEndOf       ="@id/profileImage"
    />

    <!-- EditText firstNameBox -->
    <com.google.android.material.textfield.TextInputLayout
        android:id                                  ="@+id/firstNameBox"
        style                                       ="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:paddingEnd                          ="5dip"
        android:layout_marginTop                    ="3dip"
        android:layout_marginStart                  ="16dip"
        android:layout_height                       ="wrap_content"
        android:layout_width                        ="0dip"
        node:boxStrokeColor                         ="?colorPrimary"
        node:hintTextColor                          ="?colorPrimary"
        node:layout_constraintHorizontal_chainStyle ="spread"
        node:layout_constraintTop_toTopOf           ="@id/profileImage"
        node:layout_constraintStart_toEndOf         ="@id/profileImage"
        node:layout_constraintEnd_toStartOf         ="@id/lastNameBox"
        tools:ignore                                ="RtlSymmetry">

      <!-- EditText firstName -->
      <com.google.android.material.textfield.TextInputEditText
          android:id            ="@+id/firstName"
          android:hint          ="@string/first_name"
          android:inputType     ="text"
          android:lines         ="1"
          android:layout_height ="wrap_content"
          android:layout_width  ="match_parent"
      />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- EditText lastNameBox -->
    <com.google.android.material.textfield.TextInputLayout
        android:id                                  ="@+id/lastNameBox"
        style                                       ="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:paddingStart                        ="5dip"
        android:layout_marginTop                    ="3dip"
        android:layout_height                       ="wrap_content"
        android:layout_width                        ="0dip"
        node:boxStrokeColor                         ="?colorPrimary"
        node:hintTextColor                          ="?colorPrimary"
        node:layout_constraintHorizontal_chainStyle ="spread"
        node:layout_constraintTop_toTopOf           ="@id/profileImage"
        node:layout_constraintStart_toEndOf         ="@id/firstNameBox"
        node:layout_constraintEnd_toEndOf           ="parent"
        tools:ignore                                ="RtlSymmetry">

      <!-- EditText lastName -->
      <com.google.android.material.textfield.TextInputEditText
          android:id            ="@+id/lastName"
          android:hint          ="@string/last_name"
          android:inputType     ="text"
          android:lines         ="1"
          android:layout_height ="wrap_content"
          android:layout_width  ="match_parent"
      />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- EditText gradeBox -->
    <com.google.android.material.textfield.TextInputLayout
        android:id                                  ="@+id/gradeBox"
        style                                       ="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginTop                    ="16dip"
        android:layout_height                       ="wrap_content"
        android:layout_width                        ="80dip"
        node:boxStrokeColor                         ="?colorPrimary"
        node:hintTextColor                          ="?colorPrimary"
        node:layout_constraintTop_toBottomOf        ="@id/profileImage"
        node:layout_constraintStart_toStartOf       ="parent"
        tools:ignore                                ="RtlSymmetry">

      <!-- EditText grade -->
      <com.google.android.material.textfield.TextInputEditText
          android:id            ="@+id/grade"
          android:gravity       ="center"
          android:hint          ="@string/grade"
          android:inputType     ="number"
          android:lines         ="1"
          android:layout_height ="wrap_content"
          android:layout_width  ="match_parent"
      />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- EditText goalBox -->
    <com.google.android.material.textfield.TextInputLayout
        android:id                                  ="@+id/goalBox"
        style                                       ="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginTop                    ="16dip"
        android:layout_marginStart                  ="10dip"
        android:layout_height                       ="wrap_content"
        android:layout_width                        ="100dip"
        node:boxStrokeColor                         ="?colorPrimary"
        node:hintTextColor                          ="?colorPrimary"
        node:layout_constraintTop_toBottomOf        ="@id/profileImage"
        node:layout_constraintStart_toEndOf         ="@id/gradeBox"
        tools:ignore                                ="RtlSymmetry">

      <!-- EditText goal -->
      <com.google.android.material.textfield.TextInputEditText
          android:id            ="@+id/goal"
          android:gravity       ="center"
          android:hint          ="@string/goal"
          android:inputType     ="number"
          android:lines         ="1"
          android:layout_height ="wrap_content"
          android:layout_width  ="match_parent"
      />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- EditText organizationBox -->
    <com.google.android.material.textfield.TextInputLayout
        android:id                           ="@+id/organizationBox"
        style                                ="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginTop             ="16dip"
        android:layout_height                ="wrap_content"
        android:layout_width                 ="match_parent"
        node:boxStrokeColor                  ="?colorPrimary"
        node:hintTextColor                   ="?colorPrimary"
        node:layout_constraintTop_toBottomOf ="@id/gradeBox"
        tools:ignore                         ="RtlSymmetry">

      <!-- EditText organization -->
      <com.google.android.material.textfield.TextInputEditText
          android:id            ="@+id/organization"
          android:hint          ="@string/organization"
          android:inputType     ="text"
          android:lines         ="1"
          android:layout_height ="wrap_content"
          android:layout_width  ="match_parent"
      />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- TextView userThemeText -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id                            ="@+id/userThemeText"
        android:text                          ="@string/user_theme_default_text"
        android:textColor                     ="?colorPrimary"
        android:textSize                      ="14sp"
        android:textStyle                     ="bold"
        android:layout_marginTop              ="16dip"
        android:layout_height                 ="wrap_content"
        android:layout_width                  ="match_parent"
        node:layout_constraintTop_toBottomOf  ="@id/organizationBox"
    />

    <!-- SeekBar userTheme -->
    <androidx.appcompat.widget.AppCompatSeekBar
        android:id                           ="@+id/userTheme"
        style                                ="@style/Widget.AppCompat.SeekBar.Discrete"
        android:max                          ="11"
        android:progressBackgroundTint       ="?colorPrimary"
        android:progressTint                 ="?colorPrimary"
        android:thumbTint                    ="?colorPrimary"
        android:layout_marginTop             ="5dip"
        android:layout_height                ="30dip"
        android:layout_width                 ="match_parent"
        node:backgroundTint                  ="?colorPrimary"
        node:tickMarkTint                    ="?colorPrimary"
        node:layout_constraintTop_toBottomOf ="@id/userThemeText"
        tools:ignore                         ="RtlSymmetry"
    />

    <!-- ContentLoadingProgressBar progressBar -->
    <androidx.core.widget.ContentLoadingProgressBar
        style                                   ="?android:attr/progressBarStyleLarge"
        android:id                              ="@+id/progressBar"
        android:indeterminate                   ="true"
        android:indeterminateTint               ="?colorPrimary"
        android:visibility                      ="gone"
        android:layout_height                   ="wrap_content"
        android:layout_width                    ="wrap_content"
        node:layout_constraintTop_toTopOf       ="parent"
        node:layout_constraintBottom_toBottomOf ="parent"
        node:layout_constraintStart_toStartOf   ="parent"
        node:layout_constraintEnd_toEndOf       ="parent"
        />

  </androidx.constraintlayout.widget.ConstraintLayout>

  <!-- FloatingActionButton fabSaveProfile -->
  <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id                 ="@+id/fabSaveProfile"
      android:contentDescription ="@string/fab_save"
      android:src                ="@drawable/save"
      android:layout_height      ="wrap_content"
      android:layout_width       ="wrap_content"
      node:backgroundTint        ="?colorPrimaryDark"
      node:fabSize               ="normal"
      node:layout_anchor         ="@id/bottomBar"
      node:rippleColor           ="?attr/rippleColor"
      node:tint                  ="@color/white"
  />

  <!-- BottomBar bottomBar -->
  <com.google.android.material.bottomappbar.BottomAppBar
      android:id             ="@+id/bottomBar"
      android:layout_gravity ="bottom"
      android:layout_height  ="wrap_content"
      android:layout_width   ="match_parent"
      node:backgroundTint    ="?colorPrimary"
      node:fabAlignmentMode  ="center"
  />

</androidx.coordinatorlayout.widget.CoordinatorLayout>